<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - RecodifiqueViagens</title>
        <!--Atualizei para o Bootstrap que utilizei-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!--Atualizei com meu CSS-->
        <link rel="stylesheet" href="~/css/Estilo.css">
    </head>

    <body>
        <header>
            <!-- Inicio da Minha NavBar (Barra de navegação)-->
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #240046;">
                <div class="container">
                    <a class="navbar-brand" asp-action="Index"><img src="~/Imagens/Logos/Recodifique_Viagens_Logo_Branco-sem_fundo.png" alt="Logo Recodifique Viagens" width="50px"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link link_navbar mx-4" asp-action="Index">Home</a>
                            <a class="nav-link link_navbar mx-4" asp-action="Destinos">Destinos</a>
                            <a class="nav-link link_navbar mx-4" asp-action="Promocoes">Promoções</a>
                            <a class="nav-link link_navbar mx-4" asp-action="Contato">Contato</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Fim da Minha NavBar (Barra de navegação)-->
        </header>

        <!--Padrão-->
        <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <!--Padrão-->
        <!-- Meu footer (Rodapé)-->
        <footer>
            <hr>
            &copy; 2021 Recodifique Viagens
        </footer>

        <!--Atualizei para o Bootstrap que utilizei-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

        <!--Atualizei com meu JavaScript-->
        <script src="~/js/script.js"></script>

        <!--Padrão-->
        @await RenderSectionAsync("Scripts", required: false)
        <!--Padrão-->
    </body>
</html>
